# ==============================================
# MEDSHIELD V2 - ENVIRONMENT CONFIGURATION
# ==============================================

# Groq API (Cloud LLM)
GROQ_API_KEY=your_groq_api_key_here

# Pinecone (Vector Database)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_METADATA=medshield-metadata
PINECONE_INDEX_SYNTHETIC=medshield-synthetic

# Ollama (Local LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1

# OpenAI (for embeddings - optional, not required)
# Leave empty if not using OpenAI embeddings
# Alternative: Use sentence-transformers (local, free)
OPENAI_API_KEY=

# Database
SQLITE_DB_PATH=database/identity_vault.db

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Testing Mode (uses mock stores)
TESTING_MODE=false

# Security
SECRET_KEY=your-secret-key-change-in-production
